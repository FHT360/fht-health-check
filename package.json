{
    "name": "fht-health-check",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "clean": "node node_modules/rimraf/bin.js build",
        "ts": "rimraf build && tsc -w",
        "prepare": "svn update . && cnpm i",
        "compile": "rimraf build && tsc",
        "eslint": "node ./node_modules/eslint/bin/eslint.js --quiet --ext .ts --config ./.eslintrc.js ./src ./tests",
        "crawl:home": "node build/src/crawl_urls -t home",
        "crawl:products": "node build/src/crawl_urls -t products",
        "crawl:topicposts": "node build/src/crawl_urls -t topicposts",
        "crawl:all": "npm-run-all crawl:home crawl:products crawl:topicposts",
        "crawl:md": "cross-env APP_ENV=MobileDevelopment npm run crawl:all",
        "crawl:staging": "cross-env APP_ENV=Staging npm run crawl:all",
        "crawl:prod": "cross-env APP_ENV=Production npm run crawl:all",
        "fix": "node ./node_modules/eslint/bin/eslint.js --fix --quiet --ext .ts --config ./.eslintrc.js ./src ./tests",
        "report:md": "airflow-log -d check_health_md_v1 -r health_ava -f -o",
        "report:staging": "airflow-log -d check_health_staging_v1 -r health_ava -f -o",
        "ava:404:md": "cross-env APP_ENV=MobileDevelopment ava build/tests/check_no_404.js --tap",
        "ava:404:staging": "cross-env APP_ENV=Staging ava build/tests/check_no_404.js --tap",
        "ava:404:prod": "cross-env APP_ENV=Production ava build/tests/check_no_404.js --tap",
        "ava:404": "npm run ava:404:prod",
        "ava:yj": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 PROXY=http://192.168.0.196:8888 ava build/tests/**/*.js --verbose --concurrency 1",
        "health:md": "npm run crawl:md && npm run ava:404:md",
        "health:staging": "npm run crawl:staging && npm run ava:404:staging",
        "health:prod": "npm run crawl:prod && npm run ava:404:prod",
        "yj": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 PROXY=http://192.168.0.196:8888 ava --verbose --fail-fast --concurrency 1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/cheerio": "^0.22.21",
        "@types/fs-extra": "^9.0.1",
        "@types/lodash": "^4.14.161",
        "airflow-log": "^1.0.9",
        "ava": "^3.12.1",
        "axios": "^0.20.0",
        "chai": "^4.2.0",
        "chalk": "^4.1.0",
        "cheerio": "^1.0.0-rc.3",
        "commander": "^6.1.0",
        "cross-env": "^7.0.2",
        "fht-code-gen": "^1.0.20",
        "fht-swagger-cli": "^1.0.68",
        "fs-extra": "^9.0.1",
        "lodash": "^4.17.20",
        "npm-run-all": "^4.1.5",
        "opn": "^6.0.0",
        "p-map": "^4.0.0",
        "querystring": "^0.2.0",
        "rimraf": "^3.0.2",
        "tap-summary": "^4.0.0",
        "typescript": "^4.0.2",
        "url": "^0.11.0"
    },
    "ava": {
        "files": [
            "build/tests/**/*.js"
        ],
        "source": [
            "build/**/*.js"
        ],
        "verbose": true,
        "timeout": "120s",
        "concurrency": 5,
        "failWithoutAssertions": false
    }
}