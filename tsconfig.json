{
    "compilerOptions": {
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": false,
        "lib": [
            "es2016",
            "dom"
        ],
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "build"
    }
}